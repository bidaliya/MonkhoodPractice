        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/update_gender"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"            android:layout_height="wrap_content"
            android:layout_width="320dp"
            android:layout_below="@id/update_email"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            >

            <AutoCompleteTextView
                android:id="@+id/textField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Gender"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/update_password"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/update_gender"
            android:hint="Password"
            app:errorContentDescription="Not a valid Email"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:endIconMode="password_toggle"
            app:hintTextColor="@color/purple_logo"
            app:errorEnabled="true"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/purple_logo"
            app:boxStrokeWidth="3dp"
