<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/spinner"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"            android:layout_height="wrap_content"
    android:layout_width="320dp"
    android:layout_below="@id/email_signup"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    >

    <AutoCompleteTextView
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Gender"
        />

</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/password_signup"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_below="@id/spinner"
    android:hint="Password"
    app:errorContentDescription="Not a valid Email"
    app:startIconDrawable="@drawable/ic_baseline_lock_24"
    app:endIconMode="password_toggle"
    app:hintTextColor="@color/purple_logo"
    app:errorEnabled="true"
    app:boxBackgroundColor="@color/white"
    app:boxStrokeColor="@color/purple_logo"
    app:boxStrokeWidth="3dp"
    >
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPassword"
        />
</com.google.android.material.textfield.TextInputLayout>


<Button
    android:id="@+id/create_account"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/password_signup"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="@drawable/login_button_background"
    android:fontFamily="@font/comfortaa"
    android:padding="5dp"
    android:text="Create Account"
    android:textColor="@color/white"
    android:textSize="22sp"
    android:textStyle="bold" />

</RelativeLayout>
